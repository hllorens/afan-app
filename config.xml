<?xml version='1.0' encoding='utf-8'?>

<widget id="com.cognitionis.cole" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CoLE</name>
    <description>CoLE: Programa para la Correcci√≥n de los errores en Lectura y Escritura</description>
    <author email="hectorlm1983@gmail.com" href="http://cognitionis.com">Montse de Ayala, Hector Llorens</author>

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <!--<icon src="res/icon.png" />-->
    <platform name="ios">
        <preference name="Orientation" value="all" />
        <preference name="Fullscreen" value="true" /> <!--removes status bar-->
    </platform>

    
</widget>